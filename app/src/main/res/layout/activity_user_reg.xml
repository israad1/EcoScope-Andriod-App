<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9E3A0"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/userRegistationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:fontFamily="sans-serif"
        android:text="User Registration"
        android:textAlignment="center"
        android:textColor="#1A33DC"
        android:textColorLink="#B3AE49"
        android:textSize="35dp"
        android:textStyle="bold"
        app:autoSizeTextType="uniform" />

    <TextView
        android:id="@+id/error_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        android:textColor="#DF1E1E"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/userInfo_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="User Info:"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="0dp"
            android:layout_weight="1"
            android:background="#A9EA86"
            android:shadowColor="#A04646"
            android:text="Name:"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/nameText"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Name"
            android:inputType="text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/age_txt"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="-1dp"
            android:layout_weight="1"
            android:background="#A9EA86"
            android:shadowColor="#A04646"
            android:text="Age:"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/ageText"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Age"
            android:inputType="text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/gender_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="-6dp"
            android:layout_weight="1"
            android:background="#A9EA86"
            android:shadowColor="#A04646"
            android:text="Gender:"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/genderText"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Gender"
            android:inputType="text" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginStart="5dp"
        android:text="Account Info:"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/username_txt"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="-10dp"
            android:layout_weight="1"
            android:background="#A9EA86"
            android:shadowColor="#A04646"
            android:text="Username:"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Username"
            android:inputType="text" />

    </LinearLayout>

    <TextView
        android:id="@+id/usernameDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="Username Must be 5 alphanumeric characters"
        android:textColor="#5F8BCE"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/password_txt"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="-10dp"
            android:layout_weight="1"
            android:background="#A9EA86"
            android:shadowColor="#A04646"
            android:text="Password:"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="text" />

    </LinearLayout>

    <TextView
        android:id="@+id/passwordDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="30dp"
        android:text="Password Must be 8 characters starting with uppercase"
        android:textColor="#5F8BCE"
        android:textStyle="bold" />

    <Button
        android:id="@+id/registerButton"
        android:layout_width="213dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:backgroundTint="#3A5AC0"
        android:text="Register Account"
        android:textAlignment="center" />
</LinearLayout>